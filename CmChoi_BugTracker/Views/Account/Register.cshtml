@model CmChoi_BugTracker.Models.RegisterViewModel
@{
    Layout = null;
}


<!doctype html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">
    <title>Register | CMC BugTracker</title>
    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/assets/vendor/magnific-popup/magnific-popup.css" />
    <link rel="stylesheet" href="~/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/assets/vendor/modernizr/modernizr.js"></script>

    <style>
        /* Showcase */
        #showcase {
            background: #333 url('/Images/showcasepic1.jpg') no-repeat center center;
            background-size: cover;
            height: 120vh;
            color: #fff;
        }

            #showcase .showcase-content {
                display: flex;
                flex-direction: column;
                text-align: center;
                justify-content: center;
                align-items: center;
                height: 40%;
                padding: 0 2rem;
                /* Overlay */
                position: absolute;
                top: 300px;
                left: 0;
                right: 0;
                bottom: 200px;
                background-color: rgba(0,0,0,0.7);
            }

        a.ex1:hover, a.ex1:active {
            font-size: 120%;
            text-decoration: none;
        }

        .Padright {
            padding-right: 0px;
            padding-left: 4px;
        }

        .Padleft {
            padding-right: 4px;
            padding-left: 0px;
        }

        .input-md {
            background-image: linear-gradient(-90deg, gray, white);
        }

        .signBtn {
            background-color: limegreen;
        }
    </style>
</head>

<body id="DemoHome">
    <header id="showcase">
        <div class="showcase-content">
            <div class="row">
                <!-- start: page -->
                <section class="body-sign">
                    <div class="center-sign">


                        <div class="panel panel-sign">
                            

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", enctype = "Multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="panel-body" style="background-color:rgba(0,0,0,0.2);">
                                <div class="raw form-group mb-xs">
                                    <div class="col-md-6 mb-sm Padleft">
                                        <b>@Html.TextBoxFor(m => m.FirstName, new { @Placeholder = "First name*", @class = "form-control input-md" })</b>
                                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 mb-sm Padright">
                                        <b> @Html.TextBoxFor(m => m.LastName, new { @Placeholder = "Last name*", @class = "form-control input-md" })</b>
                                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group mb-sm">

                                   <b> @Html.TextBoxFor(m => m.Email, new { @Placeholder = "Email address*", @class = "form-control input-md" })</b>
                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group mb-sm">

                                    <b>@Html.PasswordFor(m => m.Password, new { @Placeholder = "password", @class = "form-control input-md" })</b>
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group mb-sm">

                                    <b>@Html.PasswordFor(m => m.ConfirmPassword, new { @Placeholder = "confirm password", @class = "form-control input-md" })</b>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="row form-group mb-sm">
                                    <div class="col-sm-12" id="profilebox">
                                        <input name="Avatar" type="file" class="form-control input-md" id="fileUpload"/>
                                        @Html.ValidationMessageFor(m => m.Avatar, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                

                                <div class="row form-group mb-sm">
                                    <div class="col-sm-12">
                                        <button type="submit" onclick="location.href='@Url.Action("Dashboard","Home")'" class="btn signBtn btn-block">Sign Up</button>
                                    </div>
                                    <div class="col-sm-1">
                                    </div>
                                </div>
                                <div class="row form-group">
                                    <p class="text-center">Already have an account? <a href="@Url.Action("Login")">Sign In!</a></p>
                                </div>
                            </div>
                            }


                        </div>

                        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2019. All rights reserved by</p>
                    </div>
                </section>
                <!-- end: page -->
                <!-- Vendor -->
                <script src="~/assets/vendor/jquery/jquery.js"></script>
                <script src="~/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
                <script src="~/assets/vendor/bootstrap/js/bootstrap.js"></script>
                <script src="~/assets/vendor/nanoscroller/nanoscroller.js"></script>
                <script src="~/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
                <script src="~/assets/vendor/magnific-popup/magnific-popup.js"></script>
                <script src="~/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>

                <!-- Theme Base, Components and Settings -->
                <script src="~/assets/javascripts/theme.js"></script>

                <!-- Theme Custom -->
                <script src="~/assets/javascripts/theme.custom.js"></script>

                <!-- Theme Initialization Files -->
                <script src="~/assets/javascripts/theme.init.js"></script>
            </div>
        </div>
    </header>
</body>
</html>